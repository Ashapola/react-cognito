{
	"parser": "babel-eslint",
	"parserOptions": {
		"ecmaVersion": 2019,
		"sourceType": "module",
		"ecmaFeatures": {
			"jsx": true
		}
	},
	"extends": ["eslint:recommended", "plugin:react/recommended", "prettier", "prettier/react"],
	"rules": {
		"strict": ["error", "never"]
	},
	"env": {
		"browser": true,
		"jest": true
	},
	"settings": {
		"react": {
			"version": "detect"
		}
	}
}
